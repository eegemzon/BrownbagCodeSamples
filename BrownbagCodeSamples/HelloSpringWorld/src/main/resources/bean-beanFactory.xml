<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="helloSpring" class="com.sample.beans.HelloSpring">
		<property name="objMessage" ref="message" />
	</bean>
	
	<bean id="message" class="com.sample.beans.Message">
		<property name="message" value="Using BeanFactory: Welcome to Java Spring Application!" />
	</bean>

</beans>
