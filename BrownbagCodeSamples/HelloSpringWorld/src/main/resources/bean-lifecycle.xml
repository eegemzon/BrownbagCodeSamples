<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Lifecycle -->
	<bean id="beanLifecycleInitDestroy" class="com.sample.beans.BeanLifecycle" init-method="init" destroy-method="destroy">
		<property name="message" value="bean lifecycle says Hello!"></property>
	</bean>
	
	<bean id="initializingDisposableImpl" class="com.sample.beans.InitializingDisposableImpl" />
	
</beans>
